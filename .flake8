[flake8]
format = wemake
show-source = true
max-line-length = 100
max-complexity = 10
exclude =
  .venv
extend-ignore = C812, D100, D104, D106, D200, D401, E203, WPS300, WPS306
per-file-ignores =
  # Allow __init__.py with logic for Celery
  app/__init__.py: WPS410, WPS412
  # Allow a bunch of things in migrations since they're almost always auto-generated.
  app/migrations/*.py: E501, D101, WPS102, WPS219, WPS226, WPS301, WPS432, WPS458
  # Allow unused and star imports, string literal overuse and mutable constants in settings
  app/settings/*.py: F401, F403, F405, WPS226, WPS347, WPS407
  # Allow __init__.py with logic and unused imports to re-export models
  app/models/__init__.py: F401, WPS410, WPS412
  # Allow uppercase constants, nested classes and magic numbers in models
  app/models/*.py: WPS115, WPS431, WPS432
  # Allow using print in commands
  app/management/commands/*.py: WPS421
  # Allow using asserts and magic numbers in tests
  tests/*.py: S101, WPS432
  # Allow things needed for celery Task monkey-patching
  app/celery.py: WPS117, WPS609

# quotes
inline_quotes = double

# darglint configuration:
# https://github.com/terrencepreilly/darglint
strictness = long
docstring-style = google
