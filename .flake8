[flake8]
format = wemake
show-source = true
max-line-length = 100
max-complexity = 10
exclude =
  .venv
extend-ignore = C812, D100, D104, D106, D200, D401, E203, WPS115, WPS201, WPS300, WPS305, WPS306, WPS317, WPS348
per-file-ignores =
  # Allow __init__.py with logic for Celery
  app/__init__.py: WPS410, WPS412
  # Allow a bunch of things in migrations since they're almost always auto-generated.
  app/migrations/*.py: E501, D101, WPS102, WPS219, WPS226, WPS301, WPS432, WPS458
  # Allow unused and star imports, string literal overuse, mutable constants and magic numbers in settings
  app/settings/*.py: F401, F403, F405, WPS226, WPS347, WPS407, WPS432
  # Allow __init__.py with logic and unused imports to re-export models
  app/models/__init__.py: F401, WPS410, WPS412
  # Allow nested classes and magic numbers in models
  app/models/*.py: WPS431, WPS432
  # Commands: allow using "handle" as variable name, print and magic numbers
  app/management/commands/*.py: WPS110, WPS421, WPS432
  # Tests: allow asserts, overused expressions/literals, long method names, complex default values, magic numbers and falsy constants
  tests/*.py: S101, D101, D102, WPS114, WPS118, WPS214, WPS204, WPS226, WPS404, WPS432, WPS520
  # Allow things needed for celery Task monkey-patching
  app/celery.py: WPS117, WPS609

# quotes
inline_quotes = double

# darglint configuration:
# https://github.com/terrencepreilly/darglint
strictness = long
docstring-style = google

# settings for wemake-python-styleguide
# https://wemake-python-styleguide.readthedocs.io/en/latest/pages/usage/configuration.html
max-cognitive-average = 12
max-cognitive-score = 17
max-raises = 5
max-local-variables= 8
max-asserts = 10
max-line-complexity=17
show-violation-links = true
